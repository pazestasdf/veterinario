<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @pet.name %>
</p>

<p>
  <strong>Breed:</strong>
  <%= @pet.breed %>
</p>

<p>
  <strong>Birthdate:</strong>
  <%= @pet.birthdate %>
</p>
<p>
  <strong>Visits:</strong>
  <%= @pet.historyCount %>
</p>
<h2>History</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Weight</th>
      <th>Height</th>
      <th>Description</th>

    </tr>
  </thead>

  <tbody>
    <% @pet.pet_histories.each do |pet_history| %>
    <tr>
      <td><%= pet_history.weight %></td>
      <td><%= pet_history.height %></td>
      <td><%= pet_history.description %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<h2>Stats</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Peso promedio</th>
      <th>Altura promedio</th>
      <th>Peso Máximo</th>
      <th>Altura Máxima</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= @pet.avgWeight %></td>
      <td><%= @pet.avgHeight %></td>
      <td><%= @pet.maxWeight %></td>
      <td><%= @pet.maxHeight%></td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_pet_path(@pet) %> |
<%= link_to 'Back', pets_path %>